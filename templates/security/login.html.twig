{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <style>
        body {
            background-image: url('https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?ixlib=rb-4.0.3&amp;ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%253D%253D&amp;auto=format&amp;fit=crop&amp;w=2000&amp;q=80');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
        }
    </style>
{% endblock %}

{% block body %}
    <nav class="topbar">
        <a href="#" class="topbar-logo">ScriptSphere</a>
        <div class="topbar-links">
            <a href="#about" class="topbar-link">About</a>
            <a href="#contact" class="topbar-link">Contact</a>
        </div>
    </nav>

    <div class="container">
        <div class="auth-container">
            <div class="auth-header">
                <h1 class="h3 mb-3 font-weight-normal">Sign In</h1>
                <p class="text-muted">Access your ScriptSphere account</p>
            </div>

            {# Success flash (after registration) #}
            {% for msg in app.flashes('success') %}
                <div class="alert alert-success" role="alert">
                    {{ msg }}
                </div>
            {% endfor %}

            {# Login errors #}
            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }},
                    <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <form method="post" class="auth-form">
                <div class="mb-3">
                    <label for="inputUsername" class="form-label">Username</label>
                    <input
                            type="text"
                            value="{{ last_username }}"
                            name="username"
                            id="inputUsername"
                            class="form-control"
                            autocomplete="username"
                            required
                            autofocus
                    >
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    <input
                            type="password"
                            name="password"
                            id="inputPassword"
                            class="form-control"
                            autocomplete="current-password"
                            required
                    >
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Remember me
                    </label>
                </div>

                <div class="d-grid gap-2">
                    <button class="btn btn-primary btn-auth" type="submit">
                        Sign in
                    </button>
                </div>

                <div class="form-footer mt-4">
                    <p>Don't have an account? <a href="{{ path('app_registeration') }}">Register here</a></p>
                </div>
            </form>
        </div>
    </div>

    <section id="contact" class="py-5" style="background-color: #f8f9fa;">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8 text-center">
                    <h2 class="display-5 fw-bold mb-3">Meet Our Developers</h2>
                    <p class="lead">Get in touch with our talented development team</p>
                </div>
            </div>
            <div class="row g-4">
                {# ... developer cards ... #}
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div id="about" class="footer-logo">ScriptSphere</div>
        <p>Your destination for premium digital assets and online solutions</p>
        <p>
            We're a team of four passionate developer students from INSAT, building the future one line of code at a time.
            At ScriptSphere, we combine academic knowledge with practical expertise to deliver premium digital solutions.
        </p>
        <p>
            What We Offer:<br>
            Premium website templates & UI kits<br>
            Full-stack development services
        </p>
        <p>
            <i style="color: #2a1ec6; font-size: large">
                "From our laptops at INSAT to your digital presence - we make web excellence accessible."
            </i>
        </p>
        <div class="footer-links">
            <a href="#" class="footer-link">Home</a>
            <a href="#products" class="footer-link">Products</a>
            <a href="#about" class="footer-link">About</a>
            <a href="#contact" class="footer-link">Contact</a>
            <a href="#privacy" class="footer-link">Privacy Policy</a>
        </div>
        <div class="footer-copyright">
            &copy; <span id="current-year"></span> ScriptSphere. All rights reserved.
        </div>
        <script src="{{ asset('js/script.js') }}"></script>
    </footer>
{% endblock %}
