{% extends 'base.html.twig' %}

{% block title %}ScriptSphere - Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("searchInput")?.addEventListener("input", function () {
            const term = this.value.toLowerCase();
            const dashboardElements = document.querySelectorAll("#dashboardContent *");
            dashboardElements.forEach(el => {
                if (el.textContent.toLowerCase().includes(term)) {
                    el.style.display = "";
                } else if (el.children.length === 0) {
                    el.style.display = "none";
                }
            });
        });
    </script>
{% endblock %}

{% block body %}


    <div class="w-100 px-4 mt-4" id="dashboardContent">
        <div class="page-header mb-4">
            <div class="d-flex align-items-center text-white">
                <img src="https://www.w3schools.com/howto/img_avatar.png"
                     alt="User"
                     style="width: 50px; height: 50px; border-radius: 50%;"
                     class="me-2">
                <h1 class="me-auto">Welcome, {{ app.user.username }}</h1>

            </div>
            <p>Welcome back! Here's what's happening with your digital empire.</p>
        </div>

        <div class="row stats-row mb-4">
            <div class="col-md-3">
                <div class="stat-card purple">
                    <div class="stat-icon"><i class="fas fa-box"></i></div>
                    <div class="stat-info">



{#                        <h3>{{ products|length }}</h3>#}



                        <p>Products Owned</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card blue">
                    <div class="stat-icon"><i class="fas fa-heart"></i></div>
                    <div class="stat-info">
                        <h3>{{ favorites|length }}</h3>
                        <p>Favorites</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card orange">
                    <div class="stat-icon"><i class="fas fa-star"></i></div>
                    <div class="stat-info">
                        <h3>{{ averageRating }}</h3>
                        <p>Average Rating Provided</p>
                    </div>
                </div>
            </div>
        </div>



        <!-- Recent Activity -->
        <div class="card mb-4 activity-card">
            <div class="card-header d-flex justify-content-between">
                <h3>Recent Activity</h3>


                <a href="#" class="btn btn-sm btn-outline-primary">View All</a>


            </div>
            {% if recent_comments is not empty %}
                <div class="card-body">
                    <ul class="activity-list">
                        {% for comment in recent_comments %}
                            <li>
                                <div class="activity-icon">
                                    <i class="fas fa-comment"></i>
                                </div>
                                <div class="activity-details">
                                    <p>You commented on <strong>{{ comment.product.name }}</strong></p>
                                    <p class="text-muted">At <strong>{{ comment.createdAt|date('Y-m-d H:i') }}</strong></p>
                                </div>
                            </li>
                        {% else %}
                            <li><em>No recent comments.</em></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

        </div>

        <!-- Favorites Section -->
        <div id="favorites" class="card mb-5">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Mes Favoris</h3>
                <a href="{{ path('favorite_list') }}" class="btn btn-sm btn-outline-primary">See All Favorites</a>
            </div>
            <div class="card-body">
                {% if favorites is not empty %}
                    <div class="row g-4">
                        {% for product in favorites|slice(0, 3) %}
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 shadow-sm border-0 hover-lift">
                                    <div class="card-img-top overflow-hidden" style="height: 200px; background: #f8f9fa;">
                                        {% if product.imageUrl %}
                                            <img
                                                    src="{{ asset('uploads/products/' ~ product.imageUrl) }}"
                                                    class="img-fluid w-100 h-100 object-fit-cover"
                                                    alt="{{ product.name }}"
                                            >
                                        {% else %}
                                            <div class="d-flex align-items-center justify-content-center h-100">
                                                <i class="fas fa-image fa-3x text-muted"></i>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <h5 class="mb-0">{{ product.name }}</h5>
                                            <span class="badge bg-primary rounded-pill">{{ product.category }}</span>
                                        </div>
                                        <div class="mb-3">
                                            <div class="rating small text-warning">
                                                {% for i in 1..5 %}
                                                    <i class="fas fa-star{{ i > product.rating ? '-half-alt' : '' }}"></i>
                                                {% endfor %}
                                            </div>
                                            <div class="h4 text-dark mt-2">{{ product.price }} â‚¬</div>
                                        </div>
                                        <div class="mt-auto d-flex justify-content-between">
                                            <a href="{{ path('product_show', { id: product.id }) }}"
                                               class="btn btn-outline-info btn-sm w-50">
                                                <i class="fas fa-search me-1"></i>Inspect
                                            </a>
                                            <form
                                                    method="post"
                                                    action="{{ path('favorite_remove', { id: product.id }) }}"
                                                    class="w-50"
                                            >
                                                <input type="hidden" name="_token" value="{{ csrf_token('remove' ~ product.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm w-100">
                                                    <i class="fas fa-heart"></i> Retirer
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="alert alert-light text-center py-5" style="border: 1px dashed #ccc;">
                        <i class="fas fa-heart-broken fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Aucun favori pour le moment.</h5>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Recommended Products -->
        <div class="card products-card">
            <div class="card-header d-flex justify-content-between">
                <h3>Recommended For You</h3>
                <a href="{{ path('product') }}" class="btn btn-sm btn-outline-primary">Browse All</a>
            </div>
            <div class="card-body">
                <div class="row">
                    {% for product in topProducts %}
                        <div class="col-md-4">
                            <div class="product-recommendation">
                                <img
                                        src="{{ asset('uploads/products/' ~ product.imageUrl) }}"
                                        alt="{{ product.name }}"
                                        class="img-fluid rounded mb-2"
                                >
                                <div class="product-info">
                                    <h4>{{ product.name }}</h4>
                                    <p class="price">{{ product.price }}â‚¬</p>
                                    <div class="rating">
                                        {% set ratings = product.ratings %}
                                        {% set avg = 0 %}
                                        {% if ratings|length > 0 %}
                                            {% set sum = 0 %}
                                            {% for r in ratings %}
                                                {% set sum = sum + r.value %}
                                            {% endfor %}
                                            {% set avg = (sum / ratings|length)|round(1) %}
                                        {% endif %}
                                        {% for i in 1..5 %}
                                            {% if i <= avg %}
                                                <i class="fas fa-star text-warning"></i>
                                            {% elseif (i - avg) < 1 %}
                                                <i class="fas fa-star-half-alt text-warning"></i>
                                            {% else %}
                                                <i class="far fa-star text-warning"></i>
                                            {% endif %}
                                        {% endfor %}
                                        <span>({{ ratings|length }})</span>
                                    </div>
                                    <a href="{{ path('product_show', { id: product.id }) }}"
                                       class="btn btn-sm btn-primary mt-2">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <p class="text-muted">No recommended products at this time.</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block developpers %}{% endblock %}
