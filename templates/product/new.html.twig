{% extends 'base.html.twig' %}

{% block title %}New Product - Admin | ScriptSphere{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body { background: #f8f9fa; }
        #dashboardContent { max-width: 80%; margin: 0 auto; padding: 1rem 0; }
        .form-card { background: white; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.08); padding: 2rem; }
        .form-header { border-bottom: 2px solid #001761; padding-bottom: 1rem; margin-bottom: 1.5rem; }
        .form-header h1 { font-family: 'Montserrat', sans-serif; font-size: 1.8rem; font-weight: 700; color: #001761; }
        .form-header p { color: #6c757d; }
        .btn-custom { background-color: #001761; color: #fff; border-radius: 8px; padding: 0.5rem 1.5rem; }
        .btn-custom:hover { background-color: #001140; }
        .form-control:focus, .form-select:focus { border-color: #001761; box-shadow: 0 0 0 0.2rem rgba(0,23,97,.25); }
        .input-group-text { background: #e9ecef; border: none; }
        .form-label { font-weight: 500; color: #343a40; }
        .form-image-preview {
            max-width: 200px;
            max-height: 200px;
            border: 1px dashed #ddd;
            border-radius: 8px;
            padding: 8px;
            margin-top: 0.5rem;
            display: none;
            object-fit: cover;
        }
        .file-upload-container {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 1.5rem;
            text-align: center;
            background: #f8f9fa;
            cursor: pointer;
            transition: all 0.3s;
        }
        .file-upload-container:hover {
            border-color: #001761;
            background: #f0f5ff;
        }
        .file-upload-icon {
            font-size: 2.5rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
        .file-upload-text {
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
        .file-upload-btn {
            background: #e9ecef;
            border: none;
            padding: 0.25rem 1rem;
            border-radius: 4px;
            font-size: 0.9rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid" id="dashboardContent">
        <br />
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h1 class="page-header"><i class=" me-2"></i>New Product</h1>
        </div>

        <div class="form-card">
            <div class="form-header">
                <h1><i class="fas fa-plus-circle me-2"></i>Create New Product</h1>
                <p>Add a new product to your inventory</p>
            </div>

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="form-label">Product Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-tag"></i></span>
                            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter product name'}}) }}
                        </div>
                        {{ form_errors(form.name) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="form-label">Category</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-folder"></i></span>
                            <select name="{{ form.category.vars.full_name }}" class="form-select">

                            <option value="">Select a category</option>
                                {% for category in categories %}
                                    <option value="{{ category.name }}"
                                            {{ form.category.vars.value == category.name ? 'selected' : '' }}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        {{ form_errors(form.category) }}
                    </div>
                </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="form-label">Price (â‚¬)</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-euro-sign"></i></span>
                            {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder': 'Enter price'}}) }}
                        </div>
                        {{ form_errors(form.price) }}
                    </div>
                </div>


            </div>

            <div class="mb-4">
                <label class="form-label">Product Image</label>
                <div class="file-upload-container" onclick="document.getElementById('{{ form.imageFile.vars.id }}').click()">
                    <div class="file-upload-icon">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <div class="file-upload-text">
                        Click to upload or drag and drop
                    </div>
                    <div class="text-muted small mb-2">
                        JPEG, PNG, WEBP (Max 2MB)
                    </div>
                    <button type="button" class="file-upload-btn">
                        Choose File
                    </button>
                </div>
                {{ form_widget(form.imageFile, {
                    'attr': {
                        'class': 'd-none',
                        'onchange': 'previewImage(this)'
                    }
                }) }}
                {{ form_errors(form.imageFile) }}
                <img id="imagePreview" class="form-image-preview" alt="Preview">
            </div>

            <div class="mb-4">
                <label class="form-label">Description</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                    {{ form_widget(form.description, {'attr': {
                        'class': 'form-control',
                        'rows': 4,
                        'placeholder': 'Enter product description'
                    }}) }}
                </div>
            </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('product') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-custom">
                        <i class="fas fa-save me-2"></i>Create Product
                    </button>
                </div>
                {{ form_row(form._token) }}

                {{ form_end(form, {'render_rest': false}) }}



            </div>
    </div>

    <script>
        function previewImage(input) {
            const preview = document.getElementById('imagePreview');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.style.display = 'block';
                    preview.src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
                const container = document.querySelector('.file-upload-container');
                container.querySelector('.file-upload-text').textContent = input.files[0].name;
                container.querySelector('.file-upload-icon').innerHTML = '<i class="fas fa-file-image"></i>';
            } else {
                preview.style.display = 'none';
                preview.src = '';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const dropArea = document.querySelector('.file-upload-container');

            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropArea.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            ['dragenter', 'dragover'].forEach(eventName => {
                dropArea.addEventListener(eventName, highlight, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                dropArea.addEventListener(eventName, unhighlight, false);
            });

            function highlight() {
                dropArea.style.borderColor = '#001761';
                dropArea.style.backgroundColor = '#e6f0ff';
            }

            function unhighlight() {
                dropArea.style.borderColor = '#dee2e6';
                dropArea.style.backgroundColor = '#f8f9fa';
            }

            dropArea.addEventListener('drop', handleDrop, false);

            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                const input = document.getElementById('{{ form.imageFile.vars.id }}');

                if (files.length) {
                    input.files = files;
                    previewImage(input);
                }
            }
        });
    </script>
{% endblock %}
        {% block developpers %} {% endblock %}