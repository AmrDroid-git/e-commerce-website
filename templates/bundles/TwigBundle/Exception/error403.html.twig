{% extends 'base.html.twig' %}

{% block title %}Accès refusé{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .access-denied-container {
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            max-width: 600px;
            margin: 0 auto;
        }
        .access-denied-icon {
            font-size: 5rem;
            margin-bottom: 2rem;
            color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="access-denied-container text-center py-5">
        <div class="access-denied-icon">⛔</div>
        <h1 class="display-4 mb-4">Accès refusé</h1>

        <div class="card border-danger mb-4">
            <div class="card-body text-danger">
                <p class="lead mb-0">Vous n'avez pas les permissions nécessaires pour accéder à cette ressource.</p>
            </div>
        </div>

        <div class="d-grid gap-3">
            <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">
                <i class="bi bi-box-arrow-in-right"></i> Retour à la connexion
            </a>
            <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                <i class="bi bi-house"></i> Retour à l'accueil
            </a>
        </div>
    </div>
{% endblock %}