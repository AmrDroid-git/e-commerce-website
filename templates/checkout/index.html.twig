{% extends 'base.html.twig' %}

{% block title %}Payment - Webify{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="my-4 text-center">Payment for Order #{{ commande.id }}</h1>

        <p class="text-center"><strong>User:</strong> {{ commande.user.username }}</p>
        <p class="text-center"><strong>Total Price:</strong> {{ totalPrice }}</p>

        <hr>

        <h3 class="my-4">Payment Details</h3>

        <!-- Payment form -->
        <form action="{{ path('payment_process') }}" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="card_number">Card Number</label>
                    <input type="text" class="form-control" id="card_number" name="card_number" placeholder="Enter your card number" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="secret_key">Secret Key</label>
                    <input type="text" class="form-control" id="secret_key" name="secret_key" placeholder="Enter your secret key" required>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-3">Pay Now</button>
        </form>

        <hr>

        <div class="text-center">
            <small>By proceeding, you agree to our <a href="#">Terms and Conditions</a></small>
        </div>
    </div>

{% endblock %}
