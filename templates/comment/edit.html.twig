{# comment/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Comment{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-dark: #0a192f;
            --primary: #143d6d;
            --primary-light: #1e5490;
            --accent: #2a6fa6;
            --secondary: #3d8bae;
            --light: #e6f0fa;
            --border: #9ec5e6;
        }

        .page-header {
            color: var(--primary);
            border-bottom: 2px solid var(--accent);
            padding-bottom: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="page-header mb-4">
                    <i class="bi bi-pencil-square me-2"></i>Edit Your Review
                </h2>
                {% include 'comment/_form.html.twig' with { form: form, button_label: 'Update Review' } %}
            </div>
        </div>
    </div>
{% endblock %}