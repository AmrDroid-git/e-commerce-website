{# comment/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}New Comment{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-dark: #0a192f;
            --primary: #143d6d;
            --primary-light: #1e5490;
            --accent: #2a6fa6;
            --secondary: #3d8bae;
            --light: #e6f0fa;
            --border: #9ec5e6;
        }

        .page-header {
            color: var(--primary);
            border-bottom: 2px solid var(--accent);
            padding-bottom: 0.5rem;
        }

        .product-badge {
            background: rgba(232, 242, 251, 0.7);
            border: 1px solid var(--border);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="page-header mb-3">
                    <i class="bi bi-chat-square-text me-2"></i>Review for
                </h2>

                <div class="d-flex align-items-center product-badge rounded p-3 mb-4">
                    <img src="{{ product.imageUrl }}" alt="{{ product.name }}"
                         class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                    <div>
                        <h5 class="mb-0" style="color: var(--primary-dark);">{{ product.name }}</h5>
                        <small class="text-muted">{{ product.category }}</small>
                    </div>
                </div>

                {% include 'comment/_form.html.twig' with { form: form, button_label: 'Post Review' } %}
            </div>
        </div>
    </div>
{% endblock %}